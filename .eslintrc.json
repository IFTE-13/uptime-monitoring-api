{
  "extends": ["prettier", "airbnb-base"],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "env": {
    "commonjs": true,
    "node": true
  },
  "rules": {
    "eqeqeq": "off",
    "no-console": 0,
    "indent": 0,
    "linebreak-style": 0,
    "no-underscore-dangle": 0,
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto",
        "trailingComma": "es5",
        "singleQuote": true,
        "printWidth": 100,
        "tabWidth": 4,
        "semi": true,
        "parser": "flow"
      }
    ]
  },
  "plugins": ["prettier"]
}
